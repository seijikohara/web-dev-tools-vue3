{
  "name": "web-dev-tools-vue3",
  "description": "Web Development Tools",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host",
    "build": "npm run type-check && npm run build-only",
    "preview": "vite preview",
    "build-only": "vite build",
    "build:analyze": "vite build --mode analyze",
    "type-check": "vue-tsc --build --force",
    "type-check:watch": "vue-tsc --build --force --watch",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "clean": "rm -rf dist node_modules/.vite",
    "deps:update": "npx npm-check-updates -u && npm install",
    "deps:check": "npx npm-check-updates"
  },
  "dependencies": {
    "@primeuix/themes": "^1.2.1",
    "@vueuse/core": "^13.5.0",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.13",
    "dompurify": "^3.2.6",
    "json-to-ts": "^2.1.0",
    "json-tree-view-vue3": "^1.0.2",
    "marked": "^16.0.0",
    "pinia": "^3.0.3",
    "primeflex": "^4.0.0",
    "primeicons": "^7.0.0",
    "primevue": "^4.3.6",
    "switch-ts": "^1.1.1",
    "ua-parser-js": "^2.0.4",
    "vue": "^3.5.17",
    "vue-gtag": "^3.5.2",
    "vue-router": "^4.5.1",
    "vue3-ace-editor": "^2.2.4",
    "xml-formatter": "^3.6.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^24.7.0",
    "@types/ua-parser-js": "^0.7.39",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "^10.3.0",
    "prettier": "^3.6.2",
    "sass": "^1.89.2",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.0.1"
  }
}
