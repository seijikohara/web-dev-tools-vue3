{
  "name": "web-dev-tools-vue3",
  "description": "Web Development Tools",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.12.0",
    "npm": ">=11.0.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host",
    "build": "vue-tsc --build --force && vite build",
    "preview": "vite preview",
    "build-only": "vite build",
    "build:analyze": "vite build --mode analyze",
    "type-check": "vue-tsc --build --force",
    "type-check:watch": "vue-tsc --build --force --watch",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "clean": "rm -rf dist node_modules/.vite node_modules/.tmp",
    "deps:update": "npx taze -w && npm install",
    "deps:check": "npx taze",
    "ci:check": "npm run lint:check && npm run format:check && npm run type-check",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:codegen": "playwright codegen http://localhost:5173",
    "test:e2e:install": "playwright install --with-deps"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/lang-cpp": "^6.0.3",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-java": "^6.0.2",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/lang-php": "^6.0.2",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/lang-rust": "^6.0.2",
    "@codemirror/lang-sql": "^6.10.0",
    "@codemirror/lang-xml": "^6.1.0",
    "@codemirror/lang-yaml": "^6.1.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@primeuix/themes": "^2.0.3",
    "@vueuse/core": "^14.2.1",
    "ajv": "^8.18.0",
    "ajv-formats": "^3.0.1",
    "axios": "^1.13.5",
    "bcryptjs": "^3.0.3",
    "codemirror": "^6.0.2",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.19",
    "dompurify": "^3.3.1",
    "json-tree-view-vue3": "^1.1.2",
    "marked": "^17.0.3",
    "pinia": "^3.0.4",
    "primeflex": "^4.0.0",
    "primeicons": "^7.0.0",
    "primevue": "^4.5.4",
    "qrcode": "^1.5.4",
    "regexp-tree": "^0.1.27",
    "sql-formatter": "^15.7.2",
    "ua-parser-js": "^2.0.9",
    "vue": "^3.5.29",
    "vue-codemirror6": "^1.4.2",
    "vue-gtag": "^3.7.0",
    "vue-router": "^4.6.4",
    "xml-formatter": "^3.6.7",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "@playwright/test": "^1.58.2",
    "@tsconfig/node22": "^22.0.5",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^25.3.0",
    "@types/qrcode": "^1.5.6",
    "@types/ua-parser-js": "^0.7.39",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^10.0.2",
    "eslint-plugin-vue": "^10.8.0",
    "globals": "^17.3.0",
    "happy-dom": "^20.7.0",
    "prettier": "^3.8.1",
    "sass": "^1.97.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "vue-eslint-parser": "^10.4.0",
    "vue-tsc": "^3.2.5"
  }
}
